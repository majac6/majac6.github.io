extends _includes/layout

block content
  section(class="jumbotron text-center bg-overlay align-items-center display-flex flex-h-center flex-w-center")
    div(class="row")
      div(class="col-lg-12")
        h1(class="jumbotron-heading margin-bottom-20") MAJAC CSS
        h2(class="margin-bottom-20") CSS/SASS Library For WEB Developers
        
        div(class="col display-flex flex-w-center flex-h-center align-self-center textsize-md")

          a(
            href="https://github.com/majac6/majac-css"
            class="display-flex"
            target="_blank")
              i(class="fa fa-github textsize-xg"
                aria-hidden="true")
                span(class="padding-left-10") GitHub

          a(href="https://www.facebook.com/majac6"
          class="display-flex margin-left-30"
          target="_blank")
            i(class="fa fa-facebook-square textsize-xg"
            aria-hidden="true")
              span(class="padding-left-10") Facebook

  section
    div(class="container marketing padding-h-50")

      div(class="row")
        div(class="col-lg-4")
          div(class="text-center")
            i(class="fa fa-terminal" style="font-size: 100px;" aria-hidden="true")
          h2(class="text-center margin-h-40") Easy
          ul(class="textsize-lg textletter-sm")
            li Install on
              a(href="https://www.npmjs.com/package/majac-css" target="_blank") <b>NPM</b>
            li <b>Just import</b> your Project
            li Enjoy

        div(class="col-lg-4")
          div(class="text-center")
            i(class="fa fa-code" style="font-size: 100px;" aria-hidden="true")
          h2(class="text-center margin-h-40") Web Development
          ul(class="textsize-lg textletter-sm")
            li Useful make <b>HTML pages</b>
            li Good for during development
            li Supported <b>cross browser</b>

        div(class="col-lg-4")
          div(class="text-center")
            i(class="fa fa-css3" style="font-size: 100px;" aria-hidden="true")
          h2(class="text-center margin-h-40") CSS/SASS
          ul(class="textsize-lg textletter-sm")
            li
              a(href="http://sass-lang.com/" target="_blank")<b>SASS</b> is Recommended
            li Has many <b>@include Classes</b> For SASS
            li Can make clear <b>CSS code</b>