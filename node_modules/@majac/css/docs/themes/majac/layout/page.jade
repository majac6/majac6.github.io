extends _includes/layout

block content

  - var subnav_class = 'hidden-xs-up hidden-md-down';
  - var main_class = 'col-md-12';
  - if(page.title == 'documents')
    - subnav_class = 'col-md-3';
    - main_class = 'col-md-9';

  section
    div.container
      div.row

        div(class="#{main_class} padding-top-50")
          //- h1.margin-h-40 #{page.title}

          include _includes/article

        div(class="#{subnav_class}")
          - if(page.title == 'documents')
            include _includes/categories
          
