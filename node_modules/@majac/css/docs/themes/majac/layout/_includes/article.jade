article#article.article
  h1 #{page.title} #{page.category}

  hr
  
  div.article__contents
    != page.content

  - if(page.title == 'documents' && site.posts.length)
    div.padding-top-50
      each item, i in site.posts.data
        h3.margin-bottom-20= item.title 
        div.content !{item.content}
        hr.margin-bottom-25

    div
      include pagination

  - if(typeof(page.posts) != 'undefined' && page.posts.length)
    div.padding-top-50
      each item, i in page.posts.data
        h3.margin-bottom-20= item.title 
        div.content !{item.content}
        hr.margin-bottom-25